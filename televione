class televisione:

    # Attributi di Classe
    garanzia = 1
    assicurazione = True
    

    #Metodo costruttore
    def __init__(self,proprietario, marca, modello, pollici, colore):

        # Attributi di Istanza
        self.proprietario = proprietario
        self.marca = marca
        self.modello = modello
        self.pollici = pollici
        self.colore = colore
        
        

    #Metodo di tipo Get
    def scheda(self):
        return f'\nScheda "{self.proprietario}"\n Marca: {self.marca}\n Modello: {self.modello}\n pollici: {self.pollici}\n colore: {self.colore}\n assicurazione: {self.assicurazione}' 
    
alessandro = televisione("alessandro","lg,""oled",65, "nero")

lorernzo = televisione("lorenzo","samsung","crystall",55,"verde")

print("Il tipo di variabile costruita è:")
print(alessandro)
print(lorenzo)

print("\nLa singola scheda è:")
